generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Visitor {
  id        Int      @id @default(autoincrement())
  sessionId String   @unique  // anonymous session token
  name      String?
  email     String?
  createdAt DateTime @default(now())

  conversations Conversation[]

  @@map("visitor")
}

model Conversation {
  id        Int      @id @default(autoincrement())
  visitorId Int
  visitor   Visitor  @relation(fields: [visitorId], references: [id])
  lastMessage String?

  isReadByOwner Boolean @default(false)

  messages    Message[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("conversation")
}

model Message {
  id             Int          @id @default(autoincrement())
  content        String
  role           MessageRole  // "user" hoáº·c "assistant"
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  isRead Boolean @default(false)
  createdAt      DateTime     @default(now())

  @@map("message")
}

enum MessageRole {
  user
  owner
}

enum UserRole {
  admin
  user
}

model User {
  id        Int      @id @default(autoincrement())
  fullName      String?
  email     String @unique
  password  String
  role      UserRole @default(user) 
  createdAt DateTime @default(now())
}